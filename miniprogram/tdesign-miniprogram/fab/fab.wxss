.t-float-left {
  float: left;
}
.t-float-right {
  float: right;
}
@keyframes tdesign-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.hotspot-expanded.relative {
  position: relative;
}
.hotspot-expanded::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  transform: scale(1.5);
}
.t-fab {
  position: absolute;
  width: auto;
  min-width: 86rpx;
  height: 86rpx;
  line-height: normal;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-radius: 48rpx;
}
.t-fab .t-button__text {
  display: flex;
  align-items: center;
}
.t-fab::after {
  border-radius: inherit;
}
.t-fab__text {
  margin-left: 16rpx;
}
.t-fab--icononly {
  padding: 0;
  border-radius: 50%;
}
