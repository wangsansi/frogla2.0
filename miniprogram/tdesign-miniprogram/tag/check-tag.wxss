.t-float-left {
  float: left;
}
.t-float-right {
  float: right;
}
@keyframes tdesign-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.hotspot-expanded.relative {
  position: relative;
}
.hotspot-expanded::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  transform: scale(1.5);
}
.t-tag {
  display: inline-flex;
  align-items: center;
  border: 2rpx solid transparent;
  box-sizing: border-box;
  border-radius: 2px;
  padding: 0 24rpx;
  font-size: 24rpx;
  user-select: none;
}
.t-tag__text {
  word-wrap: normal;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 48rpx;
  line-height: 48rpx;
}
.t-tag__content {
  width: 100%;
}
.t-tag .t__icon {
  font-size: 24rpx;
}
.t-tag__icon-close {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}
.t-tag.t-tag--size-small {
  height: 44rpx;
  line-height: 40rpx;
  padding: 0 16rpx;
  font-size: 20rpx;
}
.t-tag.t-tag--size-small .t-icon {
  font-size: 20rpx;
}
.t-tag.t-tag--size-medium {
  height: 48rpx;
  line-height: 44rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}
.t-tag.t-tag--size-medium .t-icon {
  font-size: 24rpx;
}
.t-tag.t-tag--size-large {
  height: 60rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.t-tag.t-tag--size-large .t-icon {
  font-size: 28rpx;
}
.t-tag.t-tag--square {
  border-radius: 2px;
}
.t-tag.t-tag--round {
  border-radius: 4px;
}
.t-tag.t-tag--circle {
  border-radius: 999px;
}
.t-tag.t-tag--half-circle {
  border-radius: 0 999px 999px 0;
}
.t-tag.t-tag--checkable {
  cursor: pointer;
  color: #444;
  background-color: #f5f5f5;
  border-color: #f5f5f5;
}
.t-tag.t-tag--checkable.t-tag--checked {
  color: #fff;
  background-color: #0052D9;
  border-color: #0052D9;
}
.t-tag.t-tag--checkable.t-tag--disabled {
  cursor: not-allowed;
  color: #bbb;
  background-color: #f5f5f5;
  border-color: #f5f5f5;
}
.t-tag.t-tag--closable.t-tag--disabled {
  cursor: not-allowed;
  color: #bbb;
  background-color: #f5f5f5;
  border-color: #f5f5f5;
}
