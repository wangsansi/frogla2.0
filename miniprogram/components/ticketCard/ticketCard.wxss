/* components/ticketCard/ticketCard.wxss */
.ticket-card {
  background-color: #ffffff;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}
.ticket-card .ticket-info {
  padding: 20rpx 30rpx;
}
.ticket-card .ticket-title{
  font-size: 36rpx;
  line-height: 52rpx;
  margin-bottom: 10rpx;
}
.ticket-card .ticket-content{
  font-size: 26rpx;
  line-height: 42rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
  width: 630rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  color: #6e6e6e
}
.ticket-card .ticket-time{
  font-size: 26rpx;
  line-height: 42rpx;
  color: #b8b8bc
}
.ticket-card .ticket-steps {
  font-size: 40rpx;
  width: 100%;
  padding: 30rpx 0 0 30rpx;
  color: var(--main-color)
}
.ticket-card .ticket-operation {
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  justify-content:flex-end
}
.ticket-delete {
  width: 160rpx;
  height: 60rpx;
  line-height: 58rpx;
  text-align: center;
  color: var(--main-color);
  font-size: 29rpx;
  border: 1rpx solid var(--main-color);
  border-radius: 40rpx;
}